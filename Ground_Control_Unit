#include <SPI.h>
#include <LoRa.h>

#define ss 5
#define rst 14
#define dio0 2
#define BAND 433E6  // Adjust the frequency band as needed
int counter = 0;

void startLoRa() {
  LoRa.setPins(ss, rst, dio0);
  while (!LoRa.begin(BAND) && counter < 10) {
    Serial.print(".");
    counter++;
    delay(500);
  }
  if (counter == 10) {
    Serial.println("Starting LoRa failed!");
  } else {
    Serial.println("LoRa Initialization OK!");
  }
  delay(800);
}

void setup() {
  Serial.begin(9600);
  startLoRa();
  pinMode(33, OUTPUT);
  pinMode(25, OUTPUT);

  Serial.println("LoRa, GPS, and LED Initialization OK!");
}

void sendData() {
  String ID = "UP22XY0002";
  String message = String(ID);
  LoRa.beginPacket();
  LoRa.print(message);
  LoRa.endPacket();
}

void receivedData() {
  int packetSize = LoRa.parsePacket();
  if (packetSize) {
    String receivedMessage = "";
    while (LoRa.available()) {
      receivedMessage += (char)LoRa.read();
    }
    Serial.println("Received Data: " + receivedMessage);

    if (receivedMessage.indexOf("UP22XY0001,") != -1) {
      digitalWrite(33, HIGH);
      delay(500);
      digitalWrite(33, LOW);
    } else if (receivedMessage.indexOf("UP22XY0002,") != -1) {
      digitalWrite(25, HIGH);
      delay(500);
      digitalWrite(25, LOW);
    }
    return;
  }
}

void ReadSerialData() {
  {
    if (Serial.available() > 0) {
      String command = Serial.readString();
      LoRa.beginPacket();
      LoRa.print(command);
      LoRa.endPacket();
    }
  }
}

void loop() {
  receivedData();
  ReadSerialData();
}
